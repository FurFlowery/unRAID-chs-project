	text = text.concat(dockerCount ? "<br><span class='ca_italic'><?tr("Docker容器将会自动安装最新模板，无需您任何操作")?></span>" : "");
	text = text.concat(cookieWarning ? "<br><font color='red'>"+cookieWarning+"</font>" : "");
	swal({
		title: dockerCount+pluginCount > 1 ? tr("安装应用") : tr("安装应用"),
		text: text,
		type: "info",
		showCancelButton: true,
		cancelButtonText: "<?tr("取消")?>",
		showConfirmButton: true,
		confirmButtonText: buttonText,
		closeOnConfirm: false,
		showLoaderOnConfirm: true,
		allowOutsideClick: true,
		html: true
	}, function( isConfirm ) {
		if ( isConfirm ) {
			myCloseAlert();
			if ( docker.length && plugin.length ) {
				$.cookie("ca_plugininstallpending",plugin);
