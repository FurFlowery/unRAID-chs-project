<script>
function toggleButton(button,id) {
  var disabled = true;
  switch (id) {
  case false:
  case true:
    disabled = id;
    break;
  default:
    $('select#'+id+' option').each(function(){if ($(this).prop('selected')==true) disabled = false;});
  }
  $('input#'+button).prop('disabled',disabled);
}
