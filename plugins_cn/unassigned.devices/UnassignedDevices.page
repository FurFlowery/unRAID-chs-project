					if ( $(this).val() == surveyData[name] ) { 
						$(this).attr("checked",true);
					}
				} else if ($(this).prop("type") == "select-one") {
				$(this).find("option[value="+ surveyData[name] +"]").attr("selected",true);
				} else { 
